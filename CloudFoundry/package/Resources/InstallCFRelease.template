FormatVersion: 2.0.0
Version: 1.0.0
Name: Install CF Release

Parameters:
  httpProxy: $httpProxy

Body: |
  return deploy("{0}".format(args.httpProxy)).stdout

Scripts:
  deploy:
    Type: Application
    Version: 1.0.0
    EntryPoint: installCFRelease.sh
    Files:
     - <common.sh>
    Options:
      captureStdout: true
      captureStderr: true
